{% extends "redirects/base.html.jinja" %}

{% import "macros/formatting.txt.jinja" as fmt_txt with context %}
{% import "macros/textures.html.jinja" as texture_macros with context %}

{% block target -%}
  {{ page_url }}#{{ fragment }}
{%- endblock target %}

{% block title -%}
  {{ _('hexdoc.opengraph.category').format(category.name) }}
{%- endblock title %}

{% block description -%}
  {{ fmt_txt.styled(category.description) }}
{%- endblock description %}

{% block image -%}
  {{ texture_macros.icon_url(category.icon) }}
{%- endblock image %}
