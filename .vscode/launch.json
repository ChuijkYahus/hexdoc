    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: hexdoc export",
            "type": "python",
            "request": "launch",
            "module": "hexdoc",
            "args": [
                "export",
                "--props",
                "./test/_submodules/HexMod/doc/hexdoc.toml",
                // "--lang",
                // "en_us",
                // "--allow-missing",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: hexdoc render",
            "type": "python",
            "request": "launch",
            "module": "hexdoc",
            "args": [
                "render",
                "_site/src/docs",
                "--props",
                "${workspaceFolder}/test/_submodules/HexMod/doc/hexdoc.toml",
                "--lang",
                "en_us",
                "--allow-missing",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: hexdoc repl",
            "type": "python",
            "request": "launch",
            "module": "hexdoc.cli.main",
            "args": [
                "repl",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
    ]
}
